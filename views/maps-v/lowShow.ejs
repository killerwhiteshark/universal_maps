<%- include('../partials/header') %>

<h1>SHOW PAGE per ride</h1>
<h3><%= ride.name %></h3>
<h3><%= ride.detail %></h3>
<h3>Type of Ride: <%= ride.rideType %>.</h3>
<h3><%= ride.lotSection %></h3>
<h2>Reviews</h2>
<ul>
    <a href="/ride/new/<%= ride._id %>">Add a review!</a>
    <% ride.content.forEach((riderReviews) =>{ %>
        <li>
            <%= riderReviews.content %>
            <% review.content.forEach(comment => { %>
                <% if(comment._id.toString() === riderReviews._id.toString()){ %>
                    <form action="/ride/review/<%=comment._id%>"><input type="submit" value="Edit Review"></form>
                <%}%>
            <%})%>
        </li>
    <%})%>
</ul>
<h3><img src="<%= ride.poster %>" alt="Ride photo"></h3>
<p><a href="/lowerlot">Back </a>to Lowerlot section. </p>

<%- include('../partials/footer') %>

